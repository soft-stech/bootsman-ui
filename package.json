{
  "name": "@soft-stech/bootsman-ui",
  "version": "0.0.6",
  "author": "soft-stech",
  "repository": "https://github.com/soft-stech/bootsman-ui",
  "main": "dist/bootsman-ui.umd.js",
  "browser": "dist/bootsman-ui.mjs",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/bootsman-ui.mjs",
      "require": "./dist/bootsman-ui.umd.js"
    },
    "./dist/style.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    },
    "./*": "./dist/*"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:ui": "vitest --ui",
    "test:update": "vitest -u",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "switch:2": "vue-demi-switch 2 vue2",
    "switch:3": "vue-demi-switch 3",
    "build:package": "vite build",
    "build:types": "vue-tsc --emitDeclarationOnly -p tsconfig.vitest.json --composite false",
    "build:production": "npm run build:package && npm run build:types",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "dependencies": {
    "@fontsource-variable/inter": "^5.0.15",
    "@vueuse/core": "^10.5.0",
    "tailwind-merge": "^1.14.0",
    "vue-demi": "^0.14.6"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "tailwindcss": "^3",
    "vue": "^2.0.0 || >=3.3.4"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "devDependencies": {
    "@histoire/plugin-vue": "^0.17.1",
    "@playwright/test": "^1.39.0",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^18.18.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitest/coverage-istanbul": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "histoire": "^0.17.2",
    "jsdom": "^22.1.0",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.3",
    "typescript": "~5.2.0",
    "vite": "^4.4.11",
    "vitest": "^0.34.6",
    "vue": "^3.3.4",
    "vue-tsc": "^1.8.19"
  }
}
